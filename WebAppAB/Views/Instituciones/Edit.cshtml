@using Modelo.Entidades
@model Institucion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/_ViewImports.cshtml";
}

<h1>Edicion de Datos de la Institución</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Actualizar Institucion: @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="InstitucionId"/>

                <div class="form-group">
                    <label class="control-label">Nombre: </label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label">Tipo: </label>
                    <input class="form-control" asp-for="Tipo" />
                </div>
                <div class="form-group">
                    <label class="control-label">Pais: </label>
                    <input class="form-control" asp-for="Pais" />
                </div>
                <div class="form-group">
                    <label class="control-label">Email: </label>
                    <input class="form-control" asp-for="Email" />
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Institucion" />
                </div>
            </form>
        </div>
    </div>
</div>

