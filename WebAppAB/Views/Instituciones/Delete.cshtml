@using Modelo.Entidades
@model Institucion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/_ViewImports.cshtml";
}

<h1>Eliminacion de Datos de la Institucion</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Confirmar el borrado de la Institucion: @Model.Nombre </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="InstitucionId"/>

                <div class="form-group">
                    <label class="control-label">Nombre: </label>
                    <input class="form-control" asp-for="Nombre" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Tipo: </label>
                    <input class="form-control" asp-for="Tipo" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Pais: </label>
                    <input class="form-control" asp-for="Pais" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Email: </label>
                    <input class="form-control" asp-for="Email" disabled/>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Confirmar Borrado de la Institucion" />
                </div>
            </form>
        </div>
    </div>
</div>


