@using Modelo.Entidades
@model IEnumerable<Institucion>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_ViewImports.cshtml";
}

<h1>Lista de Instituciones</h1>
<p>A continuación se presenta la lista de Instituciones del Sistema de Aprobación de Becas</p>

<div class = "container">
    <div class="row">     
        <div class="col-sm-6">
            <h3>Instituciones</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn alert-success d-block"
                asp-controller="Instituciones" asp-action="Create">
                Crear Nueva Institución
            </a>
        </div>
    </div>

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">
                &times;
            </span>
        </button>
    </div>
    }

    <div class = "row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>Tipo</td>
                    <td>Pais</td>
                    <td>Email</td>
                </tr>
            </thead>

            <tbody>
                @foreach(Institucion institucion in Model)
                {
                    <tr>
                        <td>@institucion.InstitucionId</td>
                        <td>@institucion.Nombre</td>
                        <td>@institucion.Tipo</td>
                        <td>@institucion.Pais</td>
                        <td>@institucion.Email</td>
                        <td>
                            <a class="btn btn-warning"
                            asp-controller="Instituciones" asp-action="Edit" asp-route-id="@institucion.InstitucionId">
                            Editar
                            </a>
                            <a class="btn btn-danger"
                            asp-controller="Instituciones" asp-action="Delete" asp-route-id="@institucion.InstitucionId">
                            Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

